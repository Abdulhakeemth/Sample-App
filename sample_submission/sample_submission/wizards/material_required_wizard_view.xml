<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--    material required wizard form view-->
    <record id="material_required_wizard_view_form" model="ir.ui.view">
        <field name="name">material.required.wizard.view.form</field>
        <field name="model">material.required.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="material_req_ids">
                        <tree editable="bottom">
                            <field name="sl_no"/>
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="remarks"/>
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight"/>
                    <button special="cancel" string="Cancel" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
